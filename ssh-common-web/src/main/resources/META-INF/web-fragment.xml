    <!-- Shiro(权限控制) -->
    <filter>
        <!--
        The filter-name matches name of a 'shiroFilter' bean inside applicationContext.xml
        See <a>http://shiro.apache.org/spring.html</a> for more details.
        -->
        <filter-name>shiroFilter</filter-name>
        <!-- DelegatingFilterProxy通过代理将Filter和Spring容器中的bean关联起来 -->
        <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
        <init-param>
            <param-name>targetFilterLifecycle</param-name>
            <!-- 由Servlet容器来控制Filter的生命周期 -->
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>targetBeanName</param-name>
            <!-- 配置与Spring容器对应的Filter的bean -->
            <param-value>shiroFilter</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>shiroFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- TimeFilter(请求响应时间记录) -->
    <filter>
        <filter-name>timeFilter</filter-name>
        <filter-class>com.ssh.common.web.servlet.filter.TimeFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>timeFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Sitemesh3(页面装饰) -->
    <filter>
        <filter-name>sitemesh</filter-name>
        <filter-class>org.sitemesh.config.ConfigurableSiteMeshFilter</filter-class>
        <!--
        <init-param>
            <param-name>configFile</param-name>
            <param-value>/WEB-INF/sitemesh.xml</param-value>
        </init-param>
        -->
        <init-param>
            <param-name>decoratorMappings</param-name>
            <param-value>
                /*=/decorators/default.jsp
                /admin/*=/decorators/admin-decorator.html
            </param-value>
        </init-param>
        <init-param>
            <param-name>exclude</param-name>
            <param-value>/druid/*</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>sitemesh</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- 配置Struts2核心过滤器(参看org.apache.struts2.dispatcher.Dispatcher.init()方法) -->
    <filter>
        <filter-name>struts2</filter-name>
        <filter-class>org.apache.struts2.dispatcher.ng.filter.StrutsPrepareAndExecuteFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>struts2</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

